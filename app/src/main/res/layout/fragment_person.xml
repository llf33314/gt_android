<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/shape_toolbar_shade"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:orientation="vertical"
            android:background="@drawable/shape_white_corners"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="namenamename"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/person_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至尊版"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/dp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_person_center_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:background="@drawable/btn_white_gray_corners_top"
            >

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/person_person_center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="个人中心"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/go"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_about_duofriend_ll"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_12"
            android:background="@drawable/btn_white_gray_corners_bottom"
            >

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/person_about_duofriend"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="关于多粉"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/go"
                />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/person_out_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:text="退出登录"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_out_login"
            android:layout_marginBottom="@dimen/dp_70"
            />
    </LinearLayout>

</FrameLayout>